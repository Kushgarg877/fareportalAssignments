@model flightbooking.Models.Admin

@{
    ViewData["Title"] = "AdminLogin";
}

<h1>AdminLogin</h1>

@* <h4>Admin</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aname" class="control-label"></label>
                <input asp-for="Aname" class="form-control" />
                <span asp-validation-for="Aname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apwd" class="control-label"></label>
                <input asp-for="Apwd" class="form-control" type="password"/>
                <span asp-validation-for="Apwd" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Login" asp-action="Login">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
